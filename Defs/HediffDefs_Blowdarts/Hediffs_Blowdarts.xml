          <li>
            <capacity>Moving</capacity>
            <setMax>0.75</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.95</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>stage 2</label>
        <minSeverity>0.35</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.65</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.75</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>stage 2</label>
        <minSeverity>0.45</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.55</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.55</setMax>
          </li>
        </capMods>
      </li>
      <!-- Stage 3 -->
      <li>
        <label>stage 3</label>
        <minSeverity>0.60</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.40</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.40</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.60</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>stage 3</label>
        <minSeverity>0.80</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.20</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.20</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.40</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>stage 3</label>
        <minSeverity>1.00</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.00</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.00</setMax>
          </li>
          <li>
            <capacity>Sight</capacity>
            <setMax>0.00</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>