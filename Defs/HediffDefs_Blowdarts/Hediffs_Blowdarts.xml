          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.95</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>stage 1</label>
        <minSeverity>0.15</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.85</setMax>
          </li>
        </capMods>
      </li>
      <!-- Stage 2 -->
      <li>
        <label>stage 2</label>
        <minSeverity>0.25</minSeverity>
